[ghq]
  root = /mnt/c/.ghq
  root = ~/go/src

[ghq "CODECOMMIT-URL"]
  vcs = git

[user]
  email = hasefumi23@gmail.com
  name = hasefumi23

[alias]
  ac = !git add -A . && git commit -av
  ad = add
  amd = commit --amend
  an = !git add . && git now && git push
  br = branch
  brs = branch -a
  ci = commit -v
  co = checkout
  d = diff
  di = diff --no-index
  pl = pull
  pf = push -f
  ps = push
  st = status -sb
  sw = switch
  lol = log --graph --decorate --pretty=oneline --abbrev-commit --date=relative
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --date=relative --all
  purge = !git remote prune origin && git branch --merged | grep -vE master$ | grep -v \"*\" | xargs git branch -d

[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
  insteadOf = "github:"

[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
  insteadOf = "gist:"

[core]
  editor = "nvim"
  pager = delta
  excludesfile = ~/.gitignore_global
  quotepath = false

[color]
  ui = auto
  branch = auto
  diff = auto
  interactive = auto
  status = auto

[fetch]
  prune = true

[push]
  default = simple

[rebase]
  autostash = true

[pull]
	rebase = true

[interactive]
  diffFilter = delta --color-only

[delta]
  side-by-side = true
  line-numbers-left-format = ""
  line-numbers-right-format = "â”‚ "
  syntax-theme = Nord
